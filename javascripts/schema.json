							"title":"Street address",
							"type":"string"
						},
						"city": {
							"title":"City",
							"type":"string"
						},
						"state": {
							"title":"State",
							"type":"string",
							"minLength": 2,
							"maxLength": 2,
							"pattern": "([A-Z]{2})"
						},
						"zip": {
							"title":"Postal code",
							"type":"string",
							"minLength": 5,
							"pattern": "[0-9]{5}(-([0-9]{4}))?"
						},
