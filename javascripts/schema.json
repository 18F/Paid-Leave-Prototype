{
	"title":"leave",
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"properties": {
		"information": {
			"title": "Claim information",
			"type": "object",
			"properties": {
				"reason": {
					"title": "Reason for claim",
					"type":"string",
					"enum":[
						"Bond with a newborn or newly adopted child.",
						"Care for someone with a temporary disability or illness.",
						"Manage a recently diagnosed medical condition."
					]
				},
				"benefits_start": {
					"title": "Claim start date",
					"type":"string",
					"format":"date-time"
				}
			},
			"required": [
				"reason",
				"benefits_start"
			]
		},
		"claimant": {
			"title": "Person claiming benefits",
			"type": "object",
			"properties": {
				"name": {
					"title": "Name",
					"type": "object",
					"properties": {
						"first": {
							"title":"First",
							"type":"string"
						},
						"middle": {
							"title":"Middle",
							"type":"string"
						},
						"last": {
							"title":"Last",
							"type":"string"
						}
					},
					"required": [
						"first",
						"last"
					]
				},
				"address": {
					"title": "Mailing address",
					"type": "object",
					"properties": {
						"street": {
							"title":"Street address",
							"type":"string"
						},
						"city": {
							"title":"City",
							"type":"string"
						},
						"state": {
							"title":"State",
							"type":"string",
							"minLength": 2,
							"maxLength": 2,
							"pattern": "([A-Z]{2})"
						},
						"zip": {
							"title":"Postal code",
							"type":"string",
							"minLength": 5,
							"pattern": "[0-9]{5}(-([0-9]{4}))?"
						},
						"country": {
							"title":"Country",
							"type":"string",
							"enum": [
								"United States",
								"Other"
							]
						}
					},
					"required": [
						"street",
						"city",
						"state",
						"country"
					]
				},
				"email": {
					"title": "Email address",
					"type": "string",
					"format": "email"
				},
				"ssn": {
					"title": "Social Security Number",
					"type":"string",
					"pattern":"(?!666|000|9\\d{2})([0-9]{3})([\\s-]?)(?!00)([0-9]{2})\\2(?!0{4})([0-9]{4})"
				},
				"birthdate": {
					"title":"Date of birth",
					"type":"string",
					"format":"date-time"
				},
				"language": {
					"title":"Preferred language",
					"type":"string",
					"enum": [
						"English",
						"Spanish",
						"other"
					],
					"default": "English"
				},
				"telephone": {
					"title":"Telephone number",
					"type":"string"
				},
				"alternative_caretaker": {
					"title": "Is any other family member ready, willing, and able to provide care for the same period you are claiming benefits?",
					"type":"string",
					"enum":[
						"yes",
						"no"
					]
				},
				"required": [
					"email",
					"ssn",
					"birthdate",
					"language",
					"telephone",
					"alternative_caretaker"
				]
			}
		},
		"employment": {
			"title": "Employment information",
			"type": "object",
			"properties": {
				"employer": {
					"title": "Employer",
					"type": "object",
					"properties": {
						"name": {
							"title": "Name",
							"type": "string"
						},
						"address": {
							"title": "Mailing address",
							"type": "object",
							"properties": {
								"street": {
									"title":"Street address",
									"type":"string"
								},
								"city": {
									"title":"City",
									"type":"string"
								},
								"state": {
									"title":"State",
									"type":"string",
									"minLength": 2,
									"maxLength": 2,
									"pattern": "([A-Z]{2})"
								},
								"zip": {
									"title":"Postal code",
									"type":"string",
									"minLength": 5,
									"pattern": "[0-9]{5}(-([0-9]{4}))?"
								}
							},
							"required": [
								"street",
								"city",
								"state",
								"zip"
							]
						}
					}
				},
				"benefits_end": {
					"title": "On what date will you return to work?",
					"type":"string",
					"format":"date-time"
				},
				"continue_work": {
					"title": "Do you plan on returning to work during your family leave period?",
					"type":"string",
					"enum": [
						"yes",
						"no"
					]
				},
				"workers_comp": {
					"title": "Have you claimed or do you plan to claim workersâ€™ compensation benefits for any portion of the period covered by this claim?",
					"type":"string",
					"enum":[
						"yes",
						"no"
					]
				},
				"disclose": {
					"title": "May we disclose benefit payment information to your employer?",
					"type":"string",
					"enum":[
						"Yes",
						"No"
					]
				}
			},
			"required": [
				"benefits_end",
				"continue_work",
				"workers_comp",
				"disclose"
			]
		},
		"dependent": {
			"title": "Dependent",
			"type": "object",
			"properties": {
				"name": {
					"title": "Name",
					"type": "object",
					"properties": {
						"first": {
							"type":"string",
							"title":"First"
						},
						"middle": {
							"type":"string",
							"title":"Middle"
						},
						"last": {
							"type":"string",
							"title":"Last"
						}
					},
					"required": [
						"first",
						"last"
					]
				},
				"address": {
					"title": "Residence address (if different from claimant)",
					"type": "object",
					"properties": {
						"street": {
							"type":"string"
						},
						"city": {
							"title":"City",
							"type":"string"
						},
						"state": {
							"title":"State",
							"type":"string",
							"minLength": 2,
							"maxLength": 2,
							"pattern": "([A-Z]{2})"
						},
						"zip": {
							"title":"Postal code",
							"type":"string",
							"minLength": 5,
							"pattern": "[0-9]{5}(-([0-9]{4}))?"
						},
						"country": {
							"title":"Country",
							"type":"string",
							"enum": [
								"United States",
								"Other"
							]
						}
					},
					"required": [
						"street",
						"city",
						"state",
						"country"
					]
				},
				"relationship": {
					"type": "object",
					"properties": {
						"type": {
							"title": "Relationship",
							"type":"string",
							"enum": [
								"Family member (not child)",
								"Friend",
								"Child",
								"Foster child",
								"Other"
							]
						},
						"description": {
							"title": "Please describe the nature of your relationship.",
							"type":"string"
						},
						"documentation": {
							"title": "Documentation of Relationship",
							"description": "Birth certificate, certificate of adoption, marriage license, or other documentary material.<br><br>Alternately, take a photo of the document with your phone and text it from [[claimant.telephone]] to 55512.",
							"type": "string"
						}
					}
				}
			}
		},
		"payment": {
			"title": "Payment",
			"type": "object",
			"properties": {
				"method": {
					"type": "string",
					"enum": [
						"direct deposit",
						"prepaid debit card"
					]
				},
				"direct_deposit": {
					"type": "object",
					"properties": {
						"bank_name":
						{
							"title": "Bank name",
							"type": "string"
						},
						"account_number": {
							"title": "Account number",
							"type": "string",
							"maxLength": 10,
							"minLength": 10
						},
						"routing_number": {
							"title": "Bank routing number",
							"type": "string",
							"maxLength": 9,
							"minLength": 10
						},
						"routing_number_2": {
							"title": "Bank routing number (re-enter)",
							"type": "string",
							"maxLength": 9,
							"minLength": 9
						}
					},
					"required": [
						"bank_name",
						"account_number",
						"routing_number",
						"routing_number_2"
					]
				}
			}
		}
	}
}
